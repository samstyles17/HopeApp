<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    tools:ignore="HardcodedText"
    android:background="@drawable/hopelogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/volActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/volActivityLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Location"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/volActivityDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Date"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/volActivityTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activity Time"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="cursive"
            android:layout_marginTop="5dp"/>


        <ImageView
            android:id="@+id/volActivityApproval"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>