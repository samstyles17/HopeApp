<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    tools:ignore="HardcodedText"
    android:background="@drawable/hopelogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_margin="15dp"
            android:gravity="start">

            <TextView
                android:id="@+id/admVolunteerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/admVolunteerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteer Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/admActivityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/admActivityLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Location"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/admActivityDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Date"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/admActivityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Time"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="cursive"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="50dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/rejectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="Reject"
                android:padding="10dp"
                app:srcCompat="@drawable/baseline_block_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/acceptButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_marginTop="30dp"
                android:padding="10dp"
                android:contentDescription="Accept"
                app:srcCompat="@drawable/baseline_check_24" />
        </LinearLayout>


    </LinearLayout>






</androidx.cardview.widget.CardView>